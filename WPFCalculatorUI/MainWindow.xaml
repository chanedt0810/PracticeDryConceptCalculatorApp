<Window x:Class="WPFCalculatorUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFCalculatorUI"
        mc:Ignorable="d" FontSize="20"
        Title="Simple Calculator by Chane Du Toit" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Vertical">
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="First Number: " Width="160" Margin="5" />
                <TextBox x:Name="firstNumber" PreviewTextInput="PreviewTextInput" MinWidth="100" Margin="5" />
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Second Number: " Width="160" Margin="5" />
                <TextBox x:Name="secondNumber" PreviewTextInput="PreviewTextInput" MinWidth="100" Margin="5" />
            </StackPanel>
            <Button x:Name="getAddResultButton" Content="Add" Margin="5" Padding="10" Click="getAddResultButton_Click" />
            <StackPanel Orientation="Horizontal">
                <TextBlock Text="Result: " Width="150" Margin="5" />
                <TextBlock x:Name="addResult" Margin="5" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>